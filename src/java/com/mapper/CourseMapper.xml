<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.CourseDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="getCourseByTeacherID"  resultType="com.entity.Course">
        SELECT * FROM  standard_seminar_system.course WHERE teacher_id=#{id}
    </select>


    <select id="getCoursesByCourseID"  resultType="com.entity.Course">
        SELECT * FROM  standard_seminar_system.course
        WHERE id in
        <foreach  collection="list" item="courseIds" open="(" separator="," close=")">
            #{courseIds}
        </foreach>
    </select>

    <select id="getCourseByStudentID"  resultType="int">
        SELECT course_id  FROM  standard_seminar_system.klass_student WHERE student_id=#{0}
    </select>
    <select id="getCourseByCourseID"  resultType="com.entity.Course">
        SELECT * FROM  standard_seminar_system.course WHERE id=#{0}
    </select>
    <select id="getCourseBySeminarMainCourseID"  resultType="com.entity.Course">
        SELECT *  FROM  standard_seminar_system.course WHERE seminar_main_course_id=#{0}
    </select>
    <select id="getCourseByTeamMainCourseID"  resultType="com.entity.Course">
        SELECT *  FROM  standard_seminar_system.course WHERE team_main_course_id=#{0}
    </select>
</mapper>